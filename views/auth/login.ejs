<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include('../partials/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= validationErrors.email ? 'invalid' : '' %>" type="text" name="email" id="email"
                    value="<%= oldInputs.email %>">
                <% if(validationErrors.email) {%>
                <span class="input-msg input-msg--error"><%=validationErrors.email %></span>
                <% } %>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.password ? 'invalid' : '' %>" type="password" name="password"
                    value="<%= oldInputs.password %>" id="password">
                <% if(validationErrors.password) {%>
                <span class="input-msg input-msg--error"><%=validationErrors.password %></span>
                <% } %>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset-password">Reset Password</a>
        </div>
    </main>
    <%- include('../partials/end.ejs') %>